@using EnjOffer.Core.DTO;
@model ResetPasswordDTO;
@{
    ViewData["Title"] = "Password reset";
}
 
<h2>@ViewData["Title"]</h2>
<h4>Enter a password</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Code" type="hidden" />
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RepeatedPassword"></label>
                <input asp-for="RepeatedPassword" class="form-control" />
                <span asp-validation-for="RepeatedPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Reset</button>
        </form>
    </div>
</div>
